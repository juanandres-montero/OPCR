---
import { getCollection } from 'astro:content';
import BlogList from '../blog/BlogList.astro';

import { Card } from '@eliancodes/brutal-ui';
import { Button } from '@eliancodes/brutal-ui';

interface Props {
  count?: number;
}

const { count } = Astro.props;

const posts = await getCollection('blog').then((posts) =>
  posts.reverse().slice(0, count ?? 3)
);
---

<section class='mt-8'>
  <Card>
    <div class='flex justify-between items-start'>
      <h2 class='text-2xl md:text-4xl lg:text-6xl mb-8' style="font-family:dm-serif">
        Obras m√°s recientes
      </h2>
      <div class='hidden md:block'>
        <Button href='/OPCR/blog/'>Ver todo &rarr;</Button>
      </div>
      <div class='block md:hidden'>
        <Button href='/OPCR/blog/'>todo</Button>
      </div>
    </div>
    <BlogList posts={posts} />
  </Card>
</section>
